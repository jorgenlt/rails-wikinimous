<div class="container">
  <div class="d-flex flex-row align-items-center pt-5">
    <h1><%= @article.title %></h1>

    <%= link_to edit_article_path do %>
    <i class="fa-solid fa-pen-to-square p-3"></i>
    <% end %>

    <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
  <p class="mt-2"><%= @article.content %></p>
</div>
